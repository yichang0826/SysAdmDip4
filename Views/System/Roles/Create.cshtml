@using SysAdmDip4.Models.ViewModel;
@model RoleCreateViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Role</h4>
<hr />
<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label name="roleName" class="control-label"></label>
                <input name="roleName" class="form-control" required />
                <span for="roleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="roleDescribe" class="control-label"></label>
                <input name="roleDescribe" class="form-control" />
                <span for="roleDescribe" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            @for (int i = 0; i < Model.functions.Count; i++)
            {
                <div>
                    <input type="checkbox" id="function-@i" name="selectedFunctions" value="@Model.functions[i].Function_Id" checked>
                    <label for="function-@i">@Model.functions[i].Function_Name</label>
                </div>
            }
        </div>
        <div class="form-group">
            <br />
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
