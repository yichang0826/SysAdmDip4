@model SysAdmDip4.Models.System.Member

@{
    ViewData["Title"] = "Create";
    ViewData["Danger"] = "";
}

<h1>Create</h1>

<h4>Member</h4>
<hr />
@if (ViewBag.Danger != null)
{
    <p class="alert-danger">@ViewBag.Danger</p>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Member_Name" class="control-label"></label>
                <input asp-for="Member_Name" class="form-control" />
                <span asp-validation-for="Member_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_Account" class="control-label"></label>
                <input asp-for="Member_Account" class="form-control" />
                <span asp-validation-for="Member_Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_Password" class="control-label"></label>
                <input asp-for="Member_Password" class="form-control" />
                <span asp-validation-for="Member_Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_Email" class="control-label"></label>
                <input asp-for="Member_Email" class="form-control" />
                <span asp-validation-for="Member_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member_RoleId" class="control-label"></label>
                <select asp-for="Member_RoleId" class ="form-control" asp-items="ViewBag.Member_RoleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Member_Active" class="control-label"></label>
                <input asp-for="Member_Active" type="radio" value="1" checked />Yes
                <input asp-for="Member_Active" type="radio" value="0" />No
                <span asp-validation-for="Member_Active" class="text-danger"></span>
            </div><br />
